        "id": "inter_002",
        "title": "VLSM Design Challenge",
        "difficulty": "Intermediate",
        "description": "Design subnets with Variable Length Subnet Masking",
        "network": "172.16.0.0/20",
        "requirements": [
          {"department": "Sales", "hosts_needed": 100},
          {"department": "Engineering", "hosts_needed": 50},
          {"department": "Marketing", "hosts_needed": 25},
          {"department": "HR", "hosts_needed": 10},
          {"department": "Point-to-Point Links", "hosts_needed": 2}
        ],
        "solution": [
          {
            "department": "Sales",
            "subnet": "172.16.0.0/25",
            "hosts_available": 126,
            "efficiency": "79.4%"
          },
          {
            "department": "Engineering", 
            "subnet": "172.16.0.128/26",
            "hosts_available": 62,
            "efficiency": "80.6%"
          },
          {
            "department": "Marketing",
            "subnet": "172.16.0.192/27",
            "hosts_available": 30,
            "efficiency": "83.3%"
          },
          {
            "department": "HR",
            "subnet": "172.16.0.224/28",
            "hosts_available": 14,
            "efficiency": "71.4%"
          },
          {
            "department": "Point-to-Point Links",
            "subnet": "172.16.0.240/30",
            "hosts_available": 2,
            "efficiency": "100%"
          }
        ],
        "questions": [
          {
            "question": "Why start with the largest subnet requirement?",
            "answer": "To avoid fragmentation and make optimal use of address space",
            "explanation": "VLSM works best when you allocate larger subnets first"
          },
          {
            "question": "What is the overall address utilization efficiency?",
            "answer": "Approximately 80%",
            "explanation": "187 hosts needed out of 234 available = 79.9% efficiency"
          }
        ]
