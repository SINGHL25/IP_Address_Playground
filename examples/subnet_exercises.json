      {
        "id": "inter_003",
        "title": "Route Summarization", 
        "difficulty": "Intermediate",
        "description": "Summarize multiple networks into a single route",
        "networks": [
          "192.168.0.0/24",
          "192.168.1.0/24", 
          "192.168.2.0/24",
          "192.168.3.0/24"
        ],
        "questions": [
          {
            "question": "What is the summary route that covers all networks?",
            "answer": "192.168.0.0/22",
            "explanation": "192.168.0.0/22 covers 192.168.0.0 through 192.168.3.255"
          },
          {
            "question": "How many routing table entries are reduced?", 
            "answer": "3",
            "explanation": "4 routes become 1 route, saving 3 entries"
          },
          {
            "question": "What is the address space efficiency?",
            "answer": "100%",
            "explanation": "All addresses in the summary are actually used"
          }
        ]
      }
