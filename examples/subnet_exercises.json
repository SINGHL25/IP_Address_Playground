    "basic_exercises": [
      {
        "id": "basic_001",
        "title": "Basic Class C Subnetting",
        "difficulty": "Beginner",
        "description": "Given a Class C network, determine subnet information",
        "network": "192.168.1.0/24",
        "questions": [
          {
            "question": "What is the subnet mask in dotted decimal notation?",
            "answer": "255.255.255.0",
            "explanation": "A /24 CIDR corresponds to 255.255.255.0 subnet mask"
          },
          {
            "question": "How many host addresses are available?",
            "answer": "254",
            "explanation": "2^8 - 2 = 256 - 2 = 254 (excluding network and broadcast)"
          },
          {
            "question": "What is the broadcast address?",
            "answer": "192.168.1.255",
            "explanation": "The broadcast address is the last address in the subnet"
          },
          {
            "question": "What is the first usable host address?",
            "answer": "192.168.1.1",
            "explanation": "The first usable host address is network address + 1"
          },
          {
            "question": "What is the last usable host address?",
            "answer": "192.168.1.254",
            "explanation": "The last usable host address is broadcast address - 1"
          }
        ],
        "hints": [
          "Remember that network and broadcast addresses cannot be assigned to hosts",
          "CIDR /24 means 24 bits for network, 8 bits for hosts"
        ]
      },
      {
        "id": "basic_002", 
        "title": "Class A Network Analysis",
        "difficulty": "Beginner",
        "description": "Analyze a Class A private network",
        "network": "10.0.0.0/8",
        "questions": [
          {
            "question": "What class is this IP address?",
            "answer": "Class A",
            "explanation": "First octet 10 is in the range 1-126 (Class A)"
          },
          {
            "question": "Is this a private or public IP range?",
            "answer": "Private",
            "explanation": "10.0.0.0/8 is one of the three private IP ranges (RFC 1918)"
          },
          {
            "question": "How many networks can be created with default subnetting?",
            "answer": "1",
            "explanation": "With default Class A mask (/8), this represents one large network"
          },
          {
            "question": "How many host addresses are theoretically available?",
            "answer": "16777214",
            "explanation": "2^24 - 2 = 16,777,216 - 2 = 16,777,214"
          }
        ]
      },
      {
        "id": "basic_003",
        "title": "Class B Network Analysis",
        "difficulty": "Beginner", 
        "description": "Examine a Class B private network",
        "network": "172.16.0.0/16",
        "questions": [
          {
            "question": "What is the default subnet mask?",
            "answer": "255.255.0.0",
            "explanation": "Class B default mask is /16 or 255.255.0.0"
          },
          {
            "question": "How many host bits are available?",
            "answer": "16",
            "explanation": "32 total bits - 16 network bits = 16 host bits"
          },
          {
            "question": "What is the network address?",
            "answer": "172.16.0.0",
            "explanation": "Network address is given in the CIDR notation"
          },
          {
            "question": "What is the broadcast address?",
            "answer": "172.16.255.255",
            "explanation": "All host bits set to 1 gives the broadcast address"
          }
        ]
      }
    ],
