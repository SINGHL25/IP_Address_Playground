      {
        "id": "adv_003",
        "title": "Network Troubleshooting Scenario",
        "difficulty": "Advanced",
        "description": "Diagnose subnet configuration issues",
        "scenario": {
          "problem": "Devices in different departments can't communicate",
          "network_config": {
            "network": "192.168.0.0/22",
            "department_a": {"subnet": "192.168.0.0/24", "gateway": "192.168.0.1"},
            "department_b": {"subnet": "192.168.1.0/24", "gateway": "192.168.1.1"},
            "department_c": {"subnet": "192.168.2.0/25", "gateway": "192.168.2.1"}
          },
          "symptoms": [
            "Department A can access internet but not Department B",
            "Department C cannot reach any other department",
            "Some devices have 169.254.x.x addresses"
          ]
        },
        "analysis_questions": [
          {
            "question": "What do the 169.254.x.x addresses indicate?",
            "answer": "DHCP failure - APIPA addresses",
            "explanation": "169.254.0.0/16 is the APIPA range used when DHCP fails"
          },
          {
            "question": "Why might departments be unable to communicate?",
            "answer": "Missing inter-VLAN routing or firewall rules",
            "explanation": "Different subnets require Layer 3 routing to communicate"
          },
          {
            "question": "Is the subnet design efficient?",
            "answer": "Partially - Department C uses /25 which is more efficient",
            "explanation": "Departments A and B use /24 (254 hosts) which may be oversized"
          }
        ],
        "solutions": [
          "Configure inter-VLAN routing on the gateway",
          "Verify DHCP servers are operational",
          "Check firewall rules between VLANs",
          "Ensure proper VLAN configuration on switches"
        ]
      }
